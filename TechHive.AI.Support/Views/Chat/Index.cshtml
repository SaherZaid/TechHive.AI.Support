@{
    ViewData["Title"] = "TechHive – AI Support";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">

        <!-- Page header -->
        <div class="mb-4 text-center">
            <h1 class="fw-bold mb-2">TechHive AI Support 🤖</h1>
            <p class="text-muted mb-0">
                Ask anything about products, shipping, or returns and our AI assistant will help you.
            </p>
        </div>

        <!-- Chat card -->
        <div class="card shadow-lg border-0 chat-card">
            <div class="card-header bg-dark text-light d-flex justify-content-between align-items-center">
                <span class="fw-semibold">
                    Live chat with <span class="text-warning">TechHive Assistant</span>
                </span>
                <span class="badge bg-secondary" id="connectionStatus">Connecting...</span>
            </div>

            <!-- Messages area -->
            <div class="card-body chat-body" id="chatMessages">
                <div class="text-center text-muted py-5" id="emptyState">
                    <p class="mb-2">No messages yet.</p>
                    <p class="mb-0">Start by asking something like:</p>
                    <code>"What’s the delivery time if I order from Sweden today?"</code>
                </div>
            </div>

            <!-- Input area -->
            <div class="card-footer bg-light">
                <form class="mb-0" onsubmit="return false;">
                    <div class="input-group">
                        <input id="messageInput"
                               class="form-control"
                               placeholder="Type your question here..."
                               autocomplete="off" />
                        <button id="sendButton" type="button" class="btn btn-warning fw-semibold" disabled>
                            Send
                        </button>
                    </div>
                    <small class="text-muted d-block mt-2" id="helperText">
                        Connecting to TechHive AI...
                    </small>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- ✅ SignalR من CDN بدون integrity عشان ما ينحجب -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <script>
        const messagesDiv = document.getElementById("chatMessages");
        const emptyState = document.getElementById("emptyState");
        const messageInput = document.getElementById("messageInput");
        const sendButton = document.getElementById("sendButton");
        const connectionStatus = document.getElementById("connectionStatus");
        const helperText = document.getElementById("helperText");

        // لو صار أي خطأ عام، نعرضه في الهيلبر
        function showError(text) {
            helperText.textContent = text;
            helperText.classList.add("text-danger");
        }

        // إنشاء الاتصال مع الهَب
        let connection = new signalR.HubConnectionBuilder()
            .withUrl("/chathub")
            .withAutomaticReconnect()
            .build();

        // استقبال الرسائل من السيرفر
        connection.on("ReceiveMessage", function (sender, text, isUser) {
            if (emptyState) {
                emptyState.remove();
            }

            const wrapper = document.createElement("div");
            wrapper.classList.add("d-flex", "mb-3");

            const avatar = document.createElement("div");
            avatar.classList.add("avatar");
            const metaDiv = document.createElement("div");
            const nameDiv = document.createElement("div");
            nameDiv.classList.add("small", "text-muted");
            nameDiv.textContent = sender;
            const bubble = document.createElement("div");
            bubble.classList.add("bubble");
            bubble.textContent = text;

            if (isUser) {
                wrapper.classList.add("justify-content-end");
                avatar.classList.add("avatar-user");
                avatar.textContent = "U";
                metaDiv.classList.add("me-2", "text-end");
                bubble.classList.add("bubble-user");
                metaDiv.appendChild(nameDiv);
                metaDiv.appendChild(bubble);
                wrapper.appendChild(metaDiv);
                wrapper.appendChild(avatar);
            } else {
                wrapper.classList.add("justify-content-start");
                avatar.classList.add("avatar-bot");
                avatar.textContent = "AI";
                metaDiv.classList.add("ms-2");
                bubble.classList.add("bubble-bot");
                metaDiv.appendChild(nameDiv);
                metaDiv.appendChild(bubble);
                wrapper.appendChild(avatar);
                wrapper.appendChild(metaDiv);
            }

            messagesDiv.appendChild(wrapper);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        });

        // حالات الاتصال
        connection.onreconnecting(() => {
            connectionStatus.textContent = "Reconnecting...";
            connectionStatus.className = "badge bg-warning";
            sendButton.disabled = true;
        });

        connection.onreconnected(() => {
            connectionStatus.textContent = "Online";
            connectionStatus.className = "badge bg-success";
            sendButton.disabled = false;
            helperText.textContent = "Press Enter to send or click the button.";
            helperText.classList.remove("text-danger");
        });

        connection.onclose(() => {
            connectionStatus.textContent = "Disconnected";
            connectionStatus.className = "badge bg-danger";
            sendButton.disabled = true;
            showError("Connection closed. Please refresh the page.");
        });

        // بدء الاتصال
        connection.start()
            .then(function () {
                connectionStatus.textContent = "Online";
                connectionStatus.className = "badge bg-success";
                sendButton.disabled = false;
                helperText.textContent = "Press Enter to send or click the button.";
            })
            .catch(function (err) {
                console.error(err.toString());
                connectionStatus.textContent = "Disconnected";
                connectionStatus.className = "badge bg-danger";
                showError("Could not connect to the chat service.");
            });

        async function sendMessage() {
            const text = messageInput.value.trim();
            if (!text || sendButton.disabled) return;

            sendButton.disabled = true;
            messageInput.disabled = true;

            try {
                await connection.invoke("SendMessage", text);
            } catch (err) {
                console.error(err.toString());
                showError("Failed to send message.");
            } finally {
                messageInput.value = "";
                messageInput.disabled = false;
                sendButton.disabled = false;
                messageInput.focus();
            }
        }

        sendButton.addEventListener("click", sendMessage);

        messageInput.addEventListener("keydown", function (e) {
            if (e.key === "Enter" && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        }); 
    </script>

    <style>
        .chat-card {
            border-radius: 18px;
            overflow: hidden;
        }

        .chat-body {
            max-height: 430px;
            overflow-y: auto;
            background: radial-gradient(circle at top left, #f8f9ff, #ffffff);
        }

        .bubble {
            border-radius: 16px;
            padding: 0.6rem 0.9rem;
            max-width: 520px;
            font-size: 0.95rem;
            line-height: 1.4;
        }

        .bubble-user {
            background: #ffec99;
            color: #4a3b00;
        }

        .bubble-bot {
            background: #f1f3f5;
            border: 1px solid #dee2e6;
        }

        .avatar {
            width: 34px;
            height: 34px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            font-weight: 700;
        }

        .avatar-user {
            background: #ffc107;
            color: #212529;
        }

        .avatar-bot {
            background: #212529;
            color: #ffc107;
        }

        .chat-body::-webkit-scrollbar {
            width: 6px;
        }

        .chat-body::-webkit-scrollbar-thumb {
            background-color: #ced4da;
            border-radius: 3px;
        }
    </style>
}